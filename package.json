{
  "name": "creator-monetizer",
  "displayName": "Creator monetizer",
  "version": "0.0.1",
  "description": "Creator Monetizer is a Chrome extension that automatically turns any Amazon, eBay, Booking.com (and more) link you paste into a properly-tagged affiliate URL using your own IDsâ€”complete with cloud-synced settings, Google login, and an earnings dashboard, so creators can monetize their content effortlessly.",
  "author": "Brodie",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "firebase": "^11.8.1",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "*://*.google.com/*",
      "*://*.googleapis.com/*",
      "*://*.gstatic.com/*",
      "*://*.firebaseapp.com/*",
      "*://*.wordpress.com/*",
      "*://*.wordpress.org/*",
      "*://*.facebook.com/*",
      "*://*.twitter.com/*",
      "*://*.x.com/*",
      "*://*.linkedin.com/*",
      "*://*.medium.com/*",
      "*://*.substack.com/*",
      "*://*.notion.so/*",
      "*://*.amazon.com/*",
      "*://*.amazon.co.uk/*",
      "*://*.amazon.ca/*",
      "*://*.ebay.com/*",
      "*://*.booking.com/*"
    ],
    "permissions": [
      "storage",
      "activeTab",
      "clipboardRead",
      "identity",
      "offscreen"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "web_accessible_resources": [
      {
        "resources": ["*.js", "*.css", "*.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }
}
